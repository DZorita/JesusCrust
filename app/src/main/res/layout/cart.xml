<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondolayout">

    <LinearLayout
        android:id="@+id/header_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#783E13"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/toolbar_logo_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/toolbar_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jesus Crust"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/toolbar_notification_icon"
            android:layout_width="79dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/notificacion_logo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/header_toolbar_layout"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:background="#EDFFFFFF"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/featured_item_2_image"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/imagenproducto"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/featured_item_1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Brazo de Judas" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/featured_item_1_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="$8.99" />

                    <Button
                        android:id="@+id/featured_item_1_add_button"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:backgroundTint="#FF5722"
                        android:padding="0dp"
                        android:text="Quit"
                        android:textColorLink="#FF5722" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:background="#EDFFFFFF"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/featured_item_2_image"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/imagenproducto"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/featured_item_2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Brazo de Judas" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/featured_item_2_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="$8.99" />

                    <Button
                        android:id="@+id/featured_item_2_add_button"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:backgroundTint="#FF5722"
                        android:padding="0dp"
                        android:text="Quit"
                        android:textColorLink="#FF5722" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:background="#EDFFFFFF"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/featured_item_3_image"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/imagenproducto"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/featured_item_3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Brazo de Judas" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/featured_item_3_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="$8.99" />

                    <Button
                        android:id="@+id/featured_item_3_add_button"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:backgroundTint="#FF5722"
                        android:padding="0dp"
                        android:text="Quit"
                        android:textColorLink="#FF5722" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_nav_layout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#EDEDED"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_home_icon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/home_bien" />

            <TextView
                android:id="@+id/nav_home_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_menu_icon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/menu_bien" />

            <TextView
                android:id="@+id/nav_menu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Menu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_cart_icon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:tint="#FF5722"
                app:srcCompat="@drawable/cart_bien" />

            <TextView
                android:id="@+id/nav_cart_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cart"
                android:textColor="#FF5722" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/orders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_orders_icon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/camion"
                app:tint="#ABABAB" />

            <TextView
                android:id="@+id/nav_orders_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Orders" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_profile_icon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/profile_bien" />

            <TextView
                android:id="@+id/nav_profile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Profile" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Sub Total:  $17.74"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Delivery: $3.50"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="Total: $21.24"
            android:textSize="16sp" />

        <Button
            android:id="@+id/orderNow"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#FF5722"
            android:gravity="center"
            android:text="Order Now" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>